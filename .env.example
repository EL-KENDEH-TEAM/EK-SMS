# ============================================
# EK-SMS Environment Configuration
# ============================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to git
#
# Note: We use non-standard ports to avoid conflicts
# PostgreSQL: 5440 (default is 5432)
# Redis: 6380 (default is 6379)
# API: 8002 (default is 8000)

# ============================================
# Environment
# ============================================
NODE_ENV=development
PYTHON_ENV=development

# ============================================
# Database (PostgreSQL)
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5440
POSTGRES_USER=eksms
POSTGRES_PASSWORD=eksms_dev_password
POSTGRES_DB=eksms_dev

# Full connection URL (constructed from above)
DATABASE_URL="postgresql+asyncpg://eksms:eksms_dev_password@localhost:5440/eksms_dev"

# ============================================
# Redis
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6380/0

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8002
API_DEBUG=true
API_SECRET_KEY="6204f2fe820b233d4256e328305eb523e1aff889483057c1be4eaec91f0409e0"

# JWT Settings
JWT_SECRET_KEY="10687dc46950d5b890a2809ccee605c4c9a84d6676932e90a629868f8ec81734eb76a947d31c51c111c6082018a5bb5224009b5652ccde9d2cbf8f7fdbb83588"
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================
# Frontend Configuration
# ============================================
# API Base URLs:
#   Production:  https://ek-sms-api-staging.onrender.com/api/v1
#   Development: http://localhost:8002/api/v1
NEXT_PUBLIC_API_URL=http://localhost:8002/api/v1
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# Email (Mailpit for development)
# ============================================
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@eksms.local
SMTP_FROM_NAME=EK-SMS

# ============================================
# pgAdmin (Development Only)
# ============================================
PGADMIN_DEFAULT_EMAIL=admin@eksms.dev
PGADMIN_DEFAULT_PASSWORD=admin

# ============================================
# Two-Factor Authentication
# ============================================
